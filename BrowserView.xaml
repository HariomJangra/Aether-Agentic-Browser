<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="Agentic_Browser.BrowserView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Agentic_Browser"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <UserControl.Resources>

        <Style x:Key="NavIconButtonStyle" TargetType="Button">
            <!-- Size & layout -->
            <Setter Property="Width" Value="28"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Padding" Value="0"/>

            <!-- Shape -->
            <Setter Property="CornerRadius" Value="6"/>

            <!-- Normal state -->
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="BorderBrush" Value="Transparent"/>

            <!-- Hover state: To be Implemented -->
      

        </Style>

    </UserControl.Resources>

    <Grid Background="#F4F2EF">
        <Border
            Margin="4"
            CornerRadius="7"
            BorderBrush="#D6D3CE"
            BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="43"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Top Bar -->
                <Grid
                    Background="#fdfcf9"
                    BorderBrush="#D6D3CE"
                    BorderThickness="0,0,0,1"
                    Padding="6"
                    ColumnSpacing="6">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Navigation buttons -->
                    <StackPanel
                            Grid.Column="0"
                            Orientation="Horizontal"
                            Spacing="0">

                        <Button x:Name="BackButton"
                                Style="{StaticResource NavIconButtonStyle}">
                            <Image Source="/Assets/Icons/angle-small-left.svg"
                                Width="15"
                                Height="15"/>
                        </Button>

                        <Button x:Name="ForwardButton"
                                Style="{StaticResource NavIconButtonStyle}">
                            <Image Source="/Assets/Icons/angle-small-right.svg"
                                Width="15"
                                Height="15"/>
                        </Button>

                        <Button x:Name="ReloadButton"
                                Style="{StaticResource NavIconButtonStyle}">
                            <Image Source="/Assets/Icons/rotate-right.svg"
                                Width="11"
                                Height="11"/>
                        </Button>

                    </StackPanel>

                    <!-- URL bar -->
                    <Grid
                            Grid.Column="1"
                            Background="#FFFFFF"
                            BorderBrush="#20808d"
                            BorderThickness="1"
                            CornerRadius="6"
                            Padding="5">

                        <Grid ColumnSpacing="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Favicon placeholder -->
                            <Image
                                x:Name="FaviconImage"
                                Width="20"
                                Height="20"
                                VerticalAlignment="Center"
                                Source="/Assets/Icons/icons8-home.svg"/>

                            <!-- URL TextBox -->
                            <TextBox
                                x:Name="UrlBox"
                                Grid.Column="1"
                                Background="Transparent"
                                BorderThickness="0"
                                VerticalAlignment="Center"
                                PlaceholderText="Search or enter address"/>
                        </Grid>
                    </Grid>


                    <!-- Future actions -->
                    <StackPanel
                        Grid.Column="2"
                        Orientation="Horizontal"
                        Spacing="4">

                        <Button Content="â‹®" Width="30"/>

                    </StackPanel>

                </Grid>

                <Grid Grid.Row="1" Background="#fdfcf9">
                    <WebView2 x:Name="WebView" Source="https://google.com" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
    
    
</UserControl>
