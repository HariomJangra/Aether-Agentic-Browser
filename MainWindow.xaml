<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Agentic_Browser.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Agentic_Browser"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Agentic Browser">

    

    <Grid Background="#d3e3fd">
        <TabView x:Name="Tabs"
         Background="#E8F0FE"
         VerticalAlignment="Stretch"
         AddTabButtonClick="TabView_AddTabButtonClick"
         TabCloseRequested="TabView_TabCloseRequested"
         CanReorderTabs="True"
         CanDragTabs="True">
            <TabView.Resources>
                <SolidColorBrush x:Key="TabViewItemHeaderBackgroundSelected" Color="#F4F2EF"/>
                <SolidColorBrush x:Key="TabViewItemHeaderForegroundSelected" Color="Black"/>
                <SolidColorBrush x:Key="TabViewTrackBackground" Color="#FFEEEEEE"/>
            </TabView.Resources>

            <TabView.TabStripFooter>
                <Grid x:Name="DragRegion" Background="Transparent" MinWidth="180"/>
            </TabView.TabStripFooter>
        </TabView>
        

    </Grid>
    
</Window>
